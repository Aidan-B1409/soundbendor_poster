% ====================
% Macros
% ====================
\newcommand*{\headercolor}[1]{
    \def\param{#1}%
    \def\orange{Orange}%
    \def\black{Black}%
    \def\luminance{Luminance}%
    \ifx\param\orange
        % Orange Header
        \setbeamercolor{structure}{fg=black}
        
        % Headline
        \setbeamercolor{headline}{fg=white,bg=beaver}
        \setbeamercolor{headline rule}{bg=black}

        % use this to include logos on the left and/or right side of the header:
        \logoright{\includegraphics[width=20cm]{images/soundbendor_logo_monochrome.png}}
        \logoleft{\includegraphics[height=7cm]{images/OSU_horizontal_1C_W.png}}
    \else
        \ifx\param\luminance
            % Orange Header
            \setbeamercolor{structure}{fg=luminance}
            
            % Headline
            \setbeamercolor{headline}{fg=white,bg=luminance}
            \setbeamercolor{headline rule}{bg=black}
    
            % use this to include logos on the left and/or right side of the header:
            \logoright{\includegraphics[width=20cm]{images/soundbendor_logo_lightBG.png}}
            \logoleft{\includegraphics[height=7cm]{images/OSU_horizontal_2C_O_over_B.png}}
        \else
            % Black Header
            \setbeamercolor{structure}{fg=beaver}
            
            % Headline
            \setbeamercolor{headline}{fg=white,bg=black}
            \setbeamercolor{headline rule}{bg=beaver}
            % use this to include logos on the left and/or right side of the header:
            \logoright{\includegraphics[width=20cm]{images/soundbendor_logo_darkBG.png}}
            \logoleft{\includegraphics[height=7cm]{images/OSU_horizontal_2C_O_over_W.png}}
        \fi
    \fi
}

